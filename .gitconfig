[alias]
	aa = add --all
	br = branch
	ci = commit
	cm = commit -m
	co = checkout
	last = log -1 HEAD
	po = push origin
	st = status
	stsb = status --short --branch
	unstage = reset HEAD --
[user]
	name = sondhg
	email = sondhw@gmail.com
[core]
	editor = code --wait
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	side-by-side = false
[merge]
	conflictStyle = zdiff3
[init]
	defaultBranch = main
