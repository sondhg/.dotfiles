{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "type": "small",
    "padding": {
      "top": 1,
      "right": 2
    }
  },
  "display": {
    "separator": ">  ",
    "color": {
      "separator": "red"
    },
    "constants": [
      "═══════════════════════════════════════════════════════════════════════════",
      "║\u001b[75C║\u001b[75D"
    ],
    "size": { "binaryPrefix": "jedec" }
  },
  "modules": [
    {
      "format": "{#1}{#keys}╔{$1}╗\u001b[76D {user-name-colored}{at-symbol-colored}{host-name-colored} 💻 ",
      "type": "title"
    },
    {
      "key": "{$2}{#31}{icon} kernel   ",
      "type": "kernel"
    },
    // {
    //   "key": "{$2}{#32}󰅐 uptime   ",
    //   "type": "uptime"
    // },
    {
      "key": "{$2}{#33}{icon} distro   ",
      "type": "os"
    },
    {
      "key": "{$2}{#34}{icon} deskEnv  ",
      "type": "de"
    },
    {
      "key": "{$2}{#35}{icon} term     ",
      "type": "terminal"
    },
    {
      "key": "{$2}{#35}{icon} termFont ",
      "type": "terminalfont"
    },
    {
      "key": "{$2}{#36}{icon} shell    ",
      "type": "shell"
    },
    // {
    //   "key": "{$2}{#35}󰍛 cpu      ",
    //   "type": "cpu",
    //   "showPeCoreCount": true,
    //   "temp": true
    // },
    // {
    //   "key": "{$2}{#34}󰍛 gpu      ",
    //   "type": "gpu"
    // },
    {
      "key": "{$2}{#33}{icon} disk     ",
      "type": "disk",
      "folders": "/"
    },
    {
      "key": "{$2}{#32}{icon} memory   ",
      "type": "memory"
    },
    {
      "key": "{$2}{#31}{icon} network  ",
      "type": "localip",
      "format": "{ipv4} ({ifname})"
    },
    {
      "key": "{$2}{#35}{icon} wm       ",
      "type": "wm"
    },
    {
      "key": "{$2}{#35}{icon} wmTheme  ",
      "type": "wmtheme"
    },
    {
      "key": "{$2}{#31}{icon} theme    ",
      "type": "theme"
    }, {
      "key": "{$2}{#31}{icon} icons    ",
      "type": "icons"
    },
    {
      "key": "{$2}{#32}{icon} battery  ",
      "type": "battery"
    },
    {
      "key": "{$2}{#34}{icon} packages ",
      "type": "packages"
    },
    {
      "format": "{#1}{#keys}╠{$1}╣",
      "type": "custom"
    },
    {
      "key": "{$2}{#39}{icon} colors   ",
      "type": "colors",
      "symbol": "circle"
    },
    {
      "format": "{#1}{#keys}╚{$1}╝",
      "type": "custom"
    }
  ]
}
